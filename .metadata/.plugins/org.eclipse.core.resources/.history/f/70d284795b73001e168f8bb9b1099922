package hoja1;
// Crea un programa que pida un nÃºmero entero por teclado, entre 1 y 10.
// Si el usuario escribe un nÃºmero entero, se escribirÃ¡ su valor en pantalla.
// Si lo que escribe no es un entero, se mostarÃ¡ un mensaje de error.

import java.util.Scanner;

public class Ejercicio22 {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.println("ESCRIBE UN NUMEO ENTRE 1 Y 10");
        int num = 0;

        if (sc.hasNextInt()) {
            num = sc.nextInt();
            if (num >= 1 && num <= 10) {
                System.out.println("Tu numero es: " + num);
            } else {
                System.out.println("Ponlo entre 1 y 10");
            }
        } else {
            System.out.println("Torpe");
        }

        sc.close();
    }

}