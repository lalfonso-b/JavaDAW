package hoja2Bucles;

public class Ejer15 {
	
	public static void main(String[] args) {
		
		System.out.println("¡¡¡Potencias de 3!!!");
		
		int exp = 0;
		int potencia = 1;
		
		System.out.println(exp + "\t" + potencia);
		
		while(potencia < 12000) {
			exp++;
			potencia = potencia * 3;
			System.out.println(exp + "\t" + potencia);
		}
	}

}
